<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgfacebook">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="0.11"
            android:text="ตั้งค่าไทม์ไลน์ (Timeline)"
            android:textColor="#FFFF"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:text="คุณต้องการเห็นโพสต์ที่แสดงทัศนคติใดแสดงบนไทม์ไลน์บ้าง?"
            android:textColor="#000000"
            android:textSize="16dp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:onClick="onCheckboxClicked"
            android:layout_height="wrap_content"
            android:text="ทัศนคติเชิงบวก"
            android:textSize="16dp"/>

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:onClick="onCheckboxClicked"
            android:layout_weight="0.03"
            android:text="ทัศนคติเป็นกลาง"
            android:textSize="16dp"/>

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="match_parent"
            android:onClick="onCheckboxClicked"
            android:layout_height="28dp"
            android:text="ทัศนคติเชิงลบ"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.15" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_weight="0.07"
            android:text="ตั้งค่าการแจ้งเตือน (Notification)"
            android:textColor="#FFFF"
            android:textSize="17dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:onClick="onCheckboxClicked"
            android:text="เมื่อโพสต์สถานะที่แสดงทัศนคติเชิงลบบ่อยครั้ง"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.11" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_weight="0.07"
            android:text="ตั้งค่าการโพสต์ (Post via Application)"
            android:textColor="#FFFF"
            android:textSize="17dp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked"
            android:text="โพสต์ไปยังไทม์ไลน์ทันทีเมื่อโพสต์สถานะที่แสดงทัศนคติเชิงบวก"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="0.15" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_weight="0.11"
            android:text="ตั้งค่าไทม์ไลน์ของเพื่อน (Friends'Timeline)"
            android:textColor="#FFFF"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:text="คุณต้องการเห็นโพสต์ที่แสดงทัศนคติใดแสดงบนไทม์ไลน์ของเพื่อนบ้าง?"
            android:textColor="#000000"
            android:textSize="16dp" />

        <CheckBox
            android:id="@+id/checkBox7"
            android:layout_width="match_parent"
            android:onClick="onCheckboxClicked"
            android:layout_height="wrap_content"
            android:text="ทัศนคติเชิงบวก"
            android:textSize="16dp"/>

        <CheckBox
            android:id="@+id/checkBox8"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:onClick="onCheckboxClicked"
            android:layout_weight="0.03"
            android:text="ทัศนคติเป็นกลาง"
            android:textSize="16dp"/>

        <CheckBox
            android:id="@+id/checkBox9"
            android:layout_width="match_parent"
            android:onClick="onCheckboxClicked"
            android:layout_height="28dp"
            android:text="ทัศนคติเชิงลบ"
            android:textSize="16dp"/>

    </LinearLayout>
</ScrollView>